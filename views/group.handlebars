<div class="container indigo darken-3 white-text">
    <div class="row">
        <div class="col s6">Content</div>
        <div class="col s2 right">Difficulty</div>
        <div class="col s2 right">Current / Max Players</div>
        <div class="col s2 right">Game Name</div>
    </div>
</div>

<div class="container">
    <div class="row">
        <div class="col s5">{{project.content}}</div>
        <div class="col s2 right">{{project.dificulty}}</div>
        <div class="col s2 right">{{project.currentPlayers}} / {{project.maxPlayers}} People</div>
        <div class="col s2 right">{{project.gameName}}</div>
    </div>
    <div class="row">
        <p></p>
    </div>
</div>

<div class="container">
    {{#each project.Comments as |comment|}}
        {{> comment}}
    {{/each}}
</div>
